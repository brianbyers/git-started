#!/bin/bash

function pretty_error() {
	local FILE="$1"

	echo_clear_line
	echo_escape "${COLOR_PRETTY_MESSAGE}Pretty printed:${COLOR_RESET}  ${COLOR_LINT_FILENAME}$FILE${COLOR_RESET}"
}

OLD_DIR="$(pwd)"
cd "$(dirname "$0")"/../..
. util/bin/bare_repo_setup
FILE="$(resolve_path "$OLD_DIR" ${1+"$@"})"
run_helpers "PRETTY" "pretty_print.d" "$1"
